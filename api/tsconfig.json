{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./bin",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "bin", "test", "coverage", "dist"]
}
